<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ahorcado.MainPage">

    <ScrollView BackgroundColor="Black">
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image Source="{Binding ImagenActiva}" HeightRequest="400" x:Name="Foto"></Image>
            <HorizontalStackLayout x:Name="LblPalabra" HorizontalOptions="Center"></HorizontalStackLayout>
            <FlexLayout Wrap="Wrap" x:Name="BtnLetras"  AlignContent="Center" JustifyContent="Center"></FlexLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
